<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chulo.paisa.com.appadministradora">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/principal"
        android:label="@string/app_name"
        android:roundIcon="@drawable/principal"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controller.PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".controller.Register2Activity" />
        <activity android:name=".controller.categoria.SubirFotoCatActivity" />
        <activity android:name=".controller.productos.ProductActivity" />
        <activity android:name=".controller.productos.SubirFotoProActivity" />
        <activity android:name=".controller.pedido.PedidoActivity"></activity>
    </application>
</manifest>