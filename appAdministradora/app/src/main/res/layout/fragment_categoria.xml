<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chulo.paisa.com.appadministradora.fragment.principal.CategoriaFragment"
    android:background="#fff">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/textCategoria"
            android:layout_width="343dp"
            android:layout_height="41dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Digite Categoria"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="184dp" />

        <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite categoria"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textCategoria"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintVertical_bias="0.847" />

        <Button
            android:id="@+id/btnSubirCat"
            android:layout_width="349dp"
            android:layout_height="49dp"
            android:text="Siguiente"
            android:textColor="#FFF"
            android:background="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="171dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textCategoria"
            app:layout_constraintVertical_bias="1.0" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
